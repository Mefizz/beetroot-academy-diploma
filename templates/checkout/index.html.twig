                <div class="checkout-form">

                    <div class="col address_form_agile">
                        <h4>Детали заказа</h4>
                        {{ form_start(form, {'attr': {'class': 'creditly-card-form agileinfo_form'}}) }}
                        <section class="creditly-wrapper wthree, w3_agileits_wrapper">
                            <div class="information-wrapper">
                                <div class="first-row form-group">
                                    <div class="controls">
                                        <label class="control-label">Имя: </label>
                                        {{ form_widget(form.username, {'attr': {'class': 'billing-address-name form-control', 'placeholder': 'Ваше имя'}}) }}
                                    </div>
                                    <div class="w3_agileits_card_number_grids">
                                        <div class="w3_agileits_card_number_grid_left">
                                            <div class="controls">
                                                <label class="control-label">Номер:</label>
                                                {{ form_widget(form.phone, {'attr': {'class': 'form-control', 'placeholder': 'Телефон'}}) }}
                                            </div>
                                        </div>
                                        <div class="clear"> </div>
                                    </div>
                                    <div class="controls">
                                        <label class="control-label">Город </label>
                                        {{ form_widget(form.city, {'attr': {'class': 'form-control', 'placeholder': 'Город'}}) }}
                                    </div>
                                    <div class="controls">
                                        <label class="control-label">Email </label>
                                        {{ form_widget(form.email, {'attr': {'class': 'form-control', 'placeholder': 'Email'}}) }}
                                    </div>
                                    <div class="controls">
                                        <label class="control-label">Адрес </label>
                                        {{ form_widget(form.address, {'attr': {'class': 'form-control', 'placeholder': 'Адрес'}}) }}
                                    </div>
                                    {{ form_row(form._token) }}
                                </div>
                            </div>
                        </section>

                    </div>
                    <button class="site-btn submit-order-btn" id ="submit check_out">  Place Order</button>
                    {{ form_end(form) }}
                </div>
            </div>
            <div class="col-lg-8 order-1 order-lg-2">
                <div class="checkout-cart">
                    <h4>В вашей корзине: <span>{{ cart.count }} элементов</span></h4>
                    <table class="timetable_sub">
                        <thead>
                        <tr class="text-center">
                            <th>SL No.</th>
                            <th>Продукт</th>
                            <th>Количество</th>
                            <th>Название</th>
                            <th>Цена</th>
                            <th>Общая стоимость</th>
                            <th>Удалить</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for item in cart.getItems %}
                            <tr class="rem1 text-center"  data-productid="{{ item.product.id }}">
                                <td class="invert">1</td>
                                <td class="invert-image"><a href="{{ path('product_show', {'id': item.getProduct.id}) }}"><img src="{{ item.getProduct.image }}" alt=" " class="img-responsive"></a></td>
                                <td class="invert">
                                    {{ item.count }}
                                </td>
                                <td class="invert">{{ item.getTitle }}</td>
                                <td class="invert">{{ item.product.getCurrentPrice }} $</td>
                                <td class="invert"><span class="item-total">{{ item.getCost }}</span> $</td>
                                <td class="delete-button">
                                    <i  class="fa fa-close fa-2x delete-button"></i>
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody></table>
                </div>
            </div>
        </div>
    </div>
</section>
